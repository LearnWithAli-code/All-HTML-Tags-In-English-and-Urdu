        // زبان تبدیل کرنے کا فنکشن
        function changeLanguage(lang) {
            // بٹنز کی حالت اپ ڈیٹ کریں
            if (lang === 'urdu') {
                urduBtn.classList.add('active');
                englishBtn.classList.remove('active');
            } else {
                englishBtn.classList.add('active');
                urduBtn.classList.remove('active');
            }
            
            // صفحہ کا مواد اپ ڈیٹ کریں
            document.getElementById('main-title').textContent = languageData[lang].mainTitle;
            document.getElementById('subtitle').textContent = languageData[lang].subtitle;
            document.getElementById('toc-title').textContent = languageData[lang].tocTitle;
            
            // فہرست کے آئٹمز اپ ڈیٹ کریں
            const tocItems = document.querySelectorAll('.tag-list li');
            tocItems.forEach((item, index) => {
                item.textContent = languageData[lang].tocItems[index];
            });
            
            // سیکشن کے عنوانات اپ ڈیٹ کریں
            for (let i = 1; i <= 9; i++) {
                document.getElementById(`section${i}-title`).textContent = languageData[lang].sectionTitles[i-1];
                document.getElementById(`section${i}-subtitle`).textContent = languageData[lang].sectionSubtitles[i-1];
                document.getElementById(`section${i}-desc`).innerHTML = languageData[lang].sectionDescriptions[i-1];
            }
            
            // فوٹر کا متن اپ ڈیٹ کریں
            document.getElementById('footer-text1').textContent = languageData[lang].footerText1;
            document.getElementById('footer-text2').textContent = languageData[lang].footerText2;
            
            // HTML کا لینگویج اٹریبیوٹ اپ ڈیٹ کریں
            document.documentElement.lang = lang === 'urdu' ? 'ur' : 'en';
        }
        
        // ایونٹ لسٹنرز شامل کریں
        urduBtn.addEventListener('click', () => changeLanguage('urdu'));
        englishBtn.addEventListener('click', () => changeLanguage('english'));
        
        // ڈیفالٹ زبان سیٹ کریں
        changeLanguage('urdu');
    </script>
</body>
</html>
